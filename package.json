{
  "name": "hd-scripts",
  "version": "3.0.2",
  "description": "My personal config and scripts for web projects",
  "repository": "hugomrdias/hd-scripts",
  "author": "Hugo Dias <hugomrdias@gmail.com> (hugodias.me)",
  "license": "MIT",
  "main": "src/index.js",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "lint": "eslint **/*.js && prettier --check **/*.{js,ts,yml,json} --ignore-path .gitignore",
    "test": "mocha 'test/**/*.test.js' --timeout 10000"
  },
  "files": [
    "src",
    "eslint",
    "prettier.config.js",
    "tsconfig.json"
  ],
  "keywords": [
    "cli-app",
    "cli",
    ""
  ],
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-etc": "^2.0.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsdoc": "^39.3.6",
    "eslint-plugin-n": "^15.3.0",
    "eslint-plugin-no-only-tests": "^3.0.0",
    "eslint-plugin-promise": "^6.0.1",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unicorn": "^44.0.2",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "simple-git-hooks": "^2.8.0",
    "typescript": "^4.8.4"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,md,yml,json}": "prettier --write",
    "*.js": "eslint --fix"
  },
  "eslintConfig": {
    "extends": "./eslint/index.js",
    "parserOptions": {
      "sourceType": "script"
    },
    "rules": {
      "unicorn/prefer-module": "off"
    },
    "env": {
      "mocha": true
    }
  },
  "devDependencies": {
    "@types/assert": "^1.5.6",
    "@types/eslint": "^8.4.6",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.8.4",
    "mocha": "^10.0.0"
  }
}
