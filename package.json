{
  "name": "hd-scripts",
  "version": "9.0.6",
  "description": "My personal config and scripts for web projects",
  "author": "Hugo Dias <hugomrdias@gmail.com> (hugodias.me)",
  "license": "MIT",
  "repository": "hugomrdias/hd-scripts",
  "keywords": [
    "cli-app",
    "cli",
    ""
  ],
  "main": "eslint/index.js",
  "files": [
    "src",
    "eslint",
    "prettier.config.js",
    "tsconfig.json"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "lint": "eslint . && prettier --check **/*.{js,ts,yml,json} --ignore-path .gitignore",
    "test": "mocha 'test/**/*.test.js' --timeout 10000"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-config-standard-with-typescript": "^39.1.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-etc": "^2.0.3",
    "eslint-plugin-html": "^7.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsdoc": "^46.8.2",
    "eslint-plugin-jsonc": "^2.9.0",
    "eslint-plugin-markdown": "^3.0.1",
    "eslint-plugin-n": "^16.1.0",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unicorn": "^48.0.1",
    "eslint-plugin-yml": "^1.9.0",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "simple-git-hooks": "^2.9.0",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "@types/assert": "^1.5.7",
    "@types/eslint": "^8.44.3",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.6.5",
    "mocha": "^10.2.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,md,yml,json}": "prettier --write",
    "*": "eslint --fix"
  },
  "eslintConfig": {
    "extends": "./eslint",
    "parserOptions": {
      "sourceType": "script"
    },
    "rules": {
      "unicorn/prefer-module": "off"
    },
    "env": {
      "mocha": true
    },
    "ignorePatterns": [
      "fixtures"
    ]
  }
}
